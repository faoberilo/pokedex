<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>POKEDÉX</title>
</head>
<body>
    <nav>
        <article>
            <img src="/img/icon.png" alt=""></img>
            <a href="/">Pokedéx</a>
        </article>
        
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/cadastro">Cadastro</a></li>
        </ul>
    </nav>
    <% if(mensagem != "") {  %>
        <section id="mensagem">
            <p><%= mensagem %></p> <span id="close">&times;</span>
        </section>
    <% }  %>

    <header>
        <h1><%= titulo %></h1>
        

    </header>
    <div id="1">
               
        <h2><% pokedex.forEach(item => { %>
            <a href="/detalhes/<%= item.index%>">
            <img src=<%=item.imagem %> width="300" height="300"></img>
            <li><%= item.nome %></li>
            <li><%= item.tipo %></li></a>
        <% }) %> </h2>
        
        </div>

    
    <script src="/js/script.js"></script>


</body>
</html>